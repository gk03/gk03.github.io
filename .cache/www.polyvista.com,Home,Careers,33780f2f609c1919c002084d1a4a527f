<script type="text/javascript">
    videojs.options.flash.swf = "~/Scripts/video-js.swf";
    var scrolled = 0;
    var maxScroll = 0;
    var $vid_obj = null;

    $(document).ready(function () {
        debugger;
        var absoluteUri = window.location.href; //'http://www.polyvista.com/Home/Careers';
        if (absoluteUri.indexOf("localhost") == -1) {
        if (absoluteUri.indexOf("www") == -1) {
            window.location = "http://www.polyvista.com";
            }
        }

        $(window).resize(function () {
            var screenResolution = window.innerWidth;
            if (screenResolution >= 998) {
                $(".header").addClass("navbar-fixed-top");
                $(".header").addClass("headerContainer");
                
            }
            else {
                $(".header").removeClass("navbar-fixed-top");
                $(".header").removeClass("headerContainer");
                
            }

        })

        var screenResolution = window.innerWidth;
        if (screenResolution >= 998) {
            $(".header").addClass("navbar-fixed-top");
            $(".header").addClass("headerContainer");

        }
        else {
            $(".header").removeClass("navbar-fixed-top");
            $(".header").removeClass("headerContainer");

        }

        detectBrowser();

        setHistory();
        //$('input, textarea').placeholder();

        $(".nintySecondVideoRibbon1").click(function () {
            
            var vidsRC = this.id;

            openOverlay('#overlay-inAbox');
            $("#overlay-shade").css("background-image", "none");

            // display at specific position
            var windowTopPosition = typeof window.pageYOffset != 'undefined' ? window.pageYOffset : document.documentElement && document.documentElement.scrollTop ? document.documentElement.scrollTop : document.body.scrollTop ? document.body.scrollTop : 0;
            $('.videoPlayerContainerHomePage').css({ 'top': windowTopPosition + 40 });
            $(".videoPlayerContainerHomePage").css("display", "block");

            $vid_obj = _V_("example_video_1");
            $vid_obj.bigPlayButton.hide();
            // hide the current loaded poster
            $("img.vjs-poster").hide();

            $("#overlay-shade").click(function () {
                stopVideo();
            });

            $vid_obj.ready(function () {
                // hide the video UI
                $("#div_video_html5_api").hide();
                // and stop it from playing
                $vid_obj.pause();
                // assign the targeted videos to the source nodes
                $vid_obj.src([
                  { type: "video/mp4", src: vidsRC }
                ]);
                // replace the poster source

                // load the new sources
                $vid_obj.load();
                $("#div_video_html5_api").show();
                $vid_obj.play();
            });
        });

        var vid = videojs("example_video_1");
        vid.bigPlayButton.on("click", function () {
            this.currentTime(0);
            this.hide();
        })
        vid.on("play", function () {
            //vid.currentTime(0);
            vid.bigPlayButton.hide();
        })
        vid.on("ended", function () {
            vid.bigPlayButton.show(); //shows your play button//
            vid.cancelFullScreen(); //cancels your fullscreen//
            $(".vjs-big-play-button").attr("title", "Replay");
        });
    });

    function stopVideo() {
        $vid_obj.pause();
        $(".videoPlayerContainerHomePage").css("display", "none");
        closeOverlay();
    }

