    function PreProcedure() {
        if ('1' == "0") {
            $.ajax({
                'type': 'POST',
                url: $("#siteUrl").val() + "home/ExecuteProcedure",
                dataType: 'json',
                timeout: 10000,

                error: function (xhr) {
                    alert('Request Status: ' + xhr.status + ' Status Text: ' + xhr.statusText + ' ' + xhr.responseText);
                }
            });
        }
    }

            function clickSubscription() {
                $("#subscription").css("border-color", "#ccc");
                var email = document.getElementById("subscription").value.toString();
                if (validateEmail(email) == false) {
                    $("#subscription").css("border-color", "red");
                }
                else {
            $.ajax({
                'type': 'POST',
                url: $("#siteUrl").val() + "home/subscription",
                data: { "EmailAddress": email },  
                dataType: 'json',  
                timeout: 10000, 

                beforeSend: function () {
                    openOverlay('#overlay-inAbox');
                },
                success: function (json) {
                    window.location = "/Home/ThankYou?msg=4";
                },
                complete: function (a,b,c) {
                    
                    if (b=="timeout") {
                        alert("Oops! Something went wrong.");
                        closeOverlay();
                    } else {
                        window.location = "/Home/ThankYou?msg=4";
                    }
                },
                fail: function (a, b, c) {
                    //window.location = "/Home/ThankYou?msg=4";
                    alert("Oops! Something went wrong.");
                }
                    });
                }
            }
            
        function onSubmitContact() {
            $("#subject").css("border-color", "#ccc");
            $("#firstName").css("border-color", "#ccc");
            $("#email").css("border-color", "#ccc");
            $("#company").css("border-color", "#ccc");
            $("#phone").css("border-color", "#ccc");
            $("#comments").css("border-color", "#ccc");
           
        var fname = document.getElementById("firstName").value.toString();
        var lname = document.getElementById("lastName").value.toString();
        var email = document.getElementById("email").value.toString();
        var phone = document.getElementById("phone").value.toString();
        var subject = document.getElementById("subject").value.toString();
        var comments = document.getElementById("comments").value.toString();
        var company = document.getElementById("company").value.toString();
        var falsee = "";
        
        if (subject == "1") {
            falsee = "1";
            $("#subject").css("border-color", "red");
        }
        if (fname == "") {
            falsee = "1";
            $("#firstName").css("border-color", "red");
        }
        if (comments == "") {
            falsee = "1";
            $("#comments").css("border-color", "red");
        }
        if (phone == "") {
            falsee = "1";
            $("#phone").css("border-color", "red");
        }
        if (validateEmail(email) == false) {
            falsee = "1";
            $("#email").css("border-color", "red");
        }
        if (company == "") {
            falsee = "1";
            $("#company").css("border-color", "red");
        }
        if (falsee == "") {
            

            $.ajax({
                'type': 'POST',
                url: $("#siteUrl").val() + "home/contactFromFooter",
                data: { "fname": fname, "lname": lname, "email": email, "phone": phone, "subject": subject, "comments": comments, "company": company },  // This value came come from another element like a categories list
                dataType: 'json',  // if you are using json as data transfer format
                timeout: 10000, // Recomended for most request

                beforeSend: function () {
                    openOverlay('#overlay-inAbox');
                },
                success: function (json) {
                    window.location = "/Home/ThankYou?msg=3";
                },
                complete: function () {
                    window.location = "/Home/ThankYou?msg=3";
                }
            });
        }
    }
      
    function openOverlay(olEl) {
        $oLay = $(olEl);

        if ($('#overlay-shade').length == 0)
            $('body').prepend('<div id="overlay-shade"></div>');

        $('#overlay-shade').fadeTo(300, 0.6, function () {
            var props = {
                oLayWidth: $oLay.width(),
                scrTop: $(window).scrollTop(),
                viewPortWidth: $(window).width()
            };

            var leftPos = (props.viewPortWidth - props.oLayWidth) / 2;

            $oLay
                .css({
                    display: 'block',
                    opacity: 0,
                    top: '-=300',
                    left: leftPos + 'px'
                })
                .animate({
                    top: props.scrTop + 40,
                    opacity: 1
                }, 600);
            });
        }

    function closeOverlay() {
        
        $('#overlay-shade').fadeOut(300);
        $('#overlay-shade').css('display', 'none');

        $('.overlay').animate({
            top: '-=300',
            opacity: 0
        }, 400, function () {
            $('#overlay-shade').fadeOut(300);
            $('#overlay-shade').css('display', 'none');
            $(this).css('display', 'none');

        });
    }

    function changeCloserImg(img) {
        $("#closerImg").attr("src", $("#siteUrl").val() + "content/ModalDialog/" + img + ".png");
    }
    var data = "";
    function openMarkettingCampagnDialog() {
        //$(".contentText").html("");
        //$(".contentText").html(data.Html.replace(/&lt;/g,'<').replace(/&gt;/g,'>').replace(/&amp;/g,'&'));
        //'<%Session["popUp"] = 1; %>';
        $(".modalPopup").delay(300).fadeIn();
        
        
    }
    function closeMarkettingCampagnDialog() {
        $("#closerImg").click(function () {
            $(".modalPopup").delay(300).fadeOut();
        });
        $(document).keydown(function (e) {
            // ESCAPE key pressed
            if (e.keyCode == 27) {
                $(".modalPopup").delay(300).fadeOut();
            }
        });

        $(document).mouseup(function (e) {
            var container = $(".modal-content");
            if (!container.is(e.target) // if the target of the click isn't the container...
                && container.has(e.target).length === 0) // ... nor a descendant of the container
            {
                $(".modalPopup").delay(300).fadeOut();
            }
        });
    }

    function closepopup() {
        $(".modalPopup").delay(300).fadeOut();
    }

    function closeCampagnDialog() {
        
            $(".modalPopup").delay(300).fadeOut();
       
    }

    function onSubmitPopup() {

        $("#popUpName").css("border-color", "#ccc");
        $("#popUpEmail").css("border-color", "#ccc");

        var falsee = 0;
        var fname = document.getElementById("popUpName").value.toString();
        var email = document.getElementById("popUpEmail").value.toString();



        if (fname == "") {
            falsee = "1";
            $("#popUpName").css("border-color", "red");
        }
        if (validateEmail(email) == false) {
            falsee = "1";
            $("#popUpEmail").css("border-color", "red");
        }

        if (falsee == 0) {
            if (data.type == 1) {
                $.ajax({
                    'type': 'POST',
                    url: $("#siteUrl").val() + "home/ContactUsPop",
                    data: { "name": fname, "email": email, "Title": data.title },
                    dataType: 'json',  // if you are using json as data transfer format
                    timeout: 10000, // Recomended for most request


                    success: function (json) {

                    },
                    complete: function () {
                        window.location = "/Home/ThankYou?msg=3";
                    }

                });
            }
            else if (data.type == 2) {
                //white papers
                $.ajax({
                    'type': 'POST',
                    url: $("#siteUrl").val() + "home/order-confirmations",
                    data: { "firstName": fname, "lastName": '', "EmailAddress": email, "WhitePaper": data.docName },
                    dataType: 'json',
                    timeout: 10000,

                    
                    success: function (json) {
                        window.location = "/Home/ThankYou?msg=1";
                    },
                    complete: function () {
                        window.location = "/Home/ThankYou?msg=1";
                    }
                });
            }
            else if (data.type == 3) {
                //white papers
                $.ajax({
                    'type': 'POST',
                    url: $("#siteUrl").val() + "home/order-confirmations-caseStudy",
                    data: { "firstName": fname, "LastName": '', "EmailAdd": email, "CaseStudy": data.docName },
                    dataType: 'json',
                    timeout: 10000,

                   
                    success: function (json) {
                        window.location = "/Home/ThankYou?msg=1";
                    },
                    complete: function () {
                        window.location = "/Home/ThankYou?msg=1";
                    }
                });
            }
        }
    }

    function fetchData() {
        var dt = "";
        
        if ("1" == "0") {

            $.ajax({
                'type': 'POST',
                url: $("#siteUrl").val() + "home/DetailsByDate",
                data: { "startDate": dt },
                dataType: 'json',  // if you are using json as data transfer format
                timeout: 10000, // Recomended for most request


                success: function (json) {
                    if (json != null) {
                    data = json;
                     
                        if (json.type == 1) {
                            $("#btnPopupSubmit").attr("value", "Request Demo");
                        }
                        else {
                            $("#btnPopupSubmit").attr("value", "Download");
                        }
                        if (json.width != "") {
                            $(".modal-lg").css("max-width", json.width + "px");
                        }
                        if (json.height != "") {
                            $(".modal-content").css("max-height", json.height + "px");
                        }

                        openMarkettingCampagnDialog(json);
                    }
                },
                failure: function () {
                    openMarkettingCampagnDialog("");
                },
                complete: function () {
                    openMarkettingCampagnDialog("");
                }
                
            });
            
        }
    }

    function changeImg(obj, mode) {

        var path = $("#siteUrl").val();
        if (mode == "demo") {
            $(obj).animate({ "margin-left": "-14px", "width": "64px", "background": "url(" + path + 'images/icon-left-menu-polyvista-video-hover.png' + ") no-repeat" }, 200);
        }
        else if (mode == "contactus") {
            $(obj).animate({ "margin-left": "-14px", "width": "64px", "background": "url(" + path + 'images/email_btn_hover.png' + ") no-repeat" }, 200);
        }
        else {
            $(obj).animate({ "margin-left": "-14px", "width": "64px", "background": "url(" + path + 'images/icon-left-menu-interactive-pdf-hover.png' + ") no-repeat" }, 200);
        }
    }

    function revertImg(obj, mode) {
        var path = $("#siteUrl").val()


            if (mode == "demo") {
                $(obj).animate({ "margin-left": "0px", "width": "50px", "background": "url(" + path + 'Images/icon-left-menu-polyvista-video.png' + ") no-repeat" }, 200);
            }
            else if (mode == "contactus") {
                $(obj).animate({ "margin-left": "0px", "width": "50px", "background": "url(" + path + 'Images/email_btn.png' + ") no-repeat" }, 200);
            }
            else {
                $(obj).animate({ "margin-left": "0px", "width": "50px", "background": "url(" + path + 'Images/icon-left-menu-interactive-pdf.png' + ") no-repeat" }, 200);
            }
        }
          
    function fireFoxAct() {
        if (__currentBrowser == BrowserType.FF) {
            $(".FFPadding").css("padding-bottom", "171px ! important");
        }
    }

    
    
