        function ToggleHelpWindow() {
            var divHelp = $("#divHelp");
            var divNewsletter = $("#divNewsletter");
            if (divHelp.is(':visible')) {
                divHelp.hide();
            }
            else {
                divHelp.show();
                divNewsletter.hide();
            }
        }

        function ToggleNewsletterWindow() {
            var divHelp = $("#divHelp");
            var divNewsletter = $("#divNewsletter");
            if (divNewsletter.is(':visible')) {
                divNewsletter.hide();
            }
            else {
                divNewsletter.show();
                divHelp.hide();
            }
        }
        
