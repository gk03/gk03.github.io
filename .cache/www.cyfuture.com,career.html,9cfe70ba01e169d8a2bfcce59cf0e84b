        $(function() {
            var zoomFunc = function(dimension) {
				
                return dimension * 1.5;
            }
            var shrinkFunc = function(dimension) {
								 

                return dimension * 0.5;
            }
            $('div.gallery img').slidingGallery({'slideSpeed':'slow','Lzoom':zoomFunc, 'Pzoom':zoomFunc,'Lshrink':shrinkFunc,'Pshrink':shrinkFunc,'autoc':'true'});
         });
		
    </script>
