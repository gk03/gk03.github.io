<script type="text/javascript">

		var isIE;

		function GetIEVersion() {
		  var sAgent = window.navigator.userAgent;
		  var Idx = sAgent.indexOf("MSIE");

		  // If IE, return version number.
		  if (Idx > 0)
			return parseInt(sAgent.substring(Idx+ 5, sAgent.indexOf(".", Idx)));

		  // If IE 11 then look for Updated user agent string.
		  else if (!!navigator.userAgent.match(/Trident\/7\./))
			return 11;

		  else
			return 0; //It is not IE
		}

		if (GetIEVersion() > 0) {
		   //alert("This is IE " + GetIEVersion());
			isIE = true;
		} else {
		   //alert("This is not IE.");
			isIE = false;
		}


		$(document).ready(function () {

		    $('#nav-careers').addClass('selected');


		  $('#careers-top5 .holder').flexslider({
					animation: 'slide',
					animationLoop: false,
					slideshow: false,
					keyboard: true,
					directionNav: false,
					controlNav: false,
					touch: true,
					start: function(slider){
						var totalSlides = slider.count;

						$('#top5-next').click(function(){
							if(slider.currentSlide < totalSlides-1) {
								slider.flexAnimate(slider.currentSlide+1, true, true)
							} else {
								slider.flexAnimate(0, true, true)
							}
						})


						$('#top5-prev').click(function(){
							if(slider.currentSlide > 0) {
								slider.flexAnimate(slider.currentSlide-1, true, true)
							}
						})
					}
			});

		  $('#careers-whylove .card').click(function(){
			  if(!isIE){
				  if($(window).width() > 715){

					// test if video exists
					var video = $('.flipped video').get(0)
					if(video){
						video.pause();
						video.currentTime = 0;
					}

					if($(this).hasClass('flipped')){
						$(this).removeClass('flipped');
					} else {
						$('.flipped').removeClass('flipped');
						$(this).addClass('flipped');
						$(this).find('video').get(0).play();
					}
				  }
			  }
		  })

		if(isIE){
			$('.dogear').each(function(){
				$(this).hide();
			})
		}


	  });


</script>
 

