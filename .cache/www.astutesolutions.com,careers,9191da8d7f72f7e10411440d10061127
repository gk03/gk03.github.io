<script type="text/javascript">
	
	var menuScroll = null;
	var lastScroll = null;
	var menuDir = 0;

	$(document).ready(function() {
		/*
		$('#ask-field').focus(function() {
			if($(this).val()=='Ask Astute'){
				$(this).val('')
				$(this).addClass('ask-focused')					
			}
			$('#search-results').slideDown(500,'easeOutExpo')
			$('#search-icon').css('color','#1595d3')
		}).blur(function(){
			if($(this).val()==''){
				$(this).val('Ask Astute')
				$(this).removeClass('ask-focused')	
			}
			$('#search-results').slideUp(500,'easeOutExpo')
			$('#search-icon').css('color','#cccccc')
		})
		*/

		
		$('#main-products').mouseenter(function() {
			$('#products-drop').stop().slideDown(500, 'easeOutExpo');
			
		}).mouseleave(function(){
			$('#products-drop').stop().hide();
			
		})
		
		/* mobile menu */
		$('#menu-open').click(function(){
			$('.mobile-nav').show();
			$('#menu-close').show();
			$(this).hide();	
		});
		
		$('#menu-close').click(function(){
			$('.mobile-nav').hide();
			$('#menu-open').show();
			$(this).hide();	
		});
	})
	
	$(window).resize(function() {
		if($(window).width() > 715){
			$('#menu-close').trigger('click');
			//$('#menu-open, .mobile-nav').hide();			
		}
	})
	
	$(window).scroll(function() {
		lastScroll = menuScroll;
		menuScroll = $(window).scrollTop();
		
		if(!isMobile && $(window).width() > 715){
			if(menuScroll > 50){
				$('#my-header').css('position','fixed')
				$('#my-header').css('top','-50px')
				/*
				$('#my-header').stop().animate({
					top: -50
				},150,'easeOutExpo');
				*/

			} else {
				$('#my-header').css('position','absolute')
				$('#my-header').css('top','0')
			}
			
			if(lastScroll > menuScroll){
				/*
				$('#my-header').css('top','0');
				$('#my-header').stop().animate({
					top: 0
				},150,'easeOutExpo');
				*/
			}
			
		} else {
			$('#my-header').css('top','0')	
		}

		

 	})
	
		


</script>
	
