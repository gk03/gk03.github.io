		var slideChangeTimer;
		$(function () {
			$('#slides').slides({
				preload: false,
				autoHeight: false,
				play: 5000,
				effect: 'fade',
				crossfade: true,
				fadeSpeed: 200,
				generateNextPrev: false
			});
			slideChangeTimer = window.setInterval(slideChange, 4990);

			$('div#slides div.imgtext a').click(function () {
				dataLayer.push({
					'event': 'e_carouselClick',
					'indexNumber': $(this).index(),
					'indexName': $(this).find('img').attr('alt')
				});
				window.clearInterval(slideChangeTimer);
			}); // end expression
			$('ul.pagination li a').click(function () {
				window.clearInterval(slideChangeTimer);
			});
		}); // end jquery onload
		var isRed = true;
		function slideChange() {
			if (isRed == true) {
				$('div#testIndicator').css('background-color', '#0000FF');
				isRed = false;
			} else {
				$('div#testIndicator').css('background-color', '#DF0101');
				isRed = true;
			}
			var indexNum = $('div.slides_control div.imgtext:visible')[0].id;
			var indexName = $('div.slides_control div.imgtext:visible a img').attr('alt');
			dataLayer.push({
				'event': 'e_carouselChange',
				'indexNumber': indexNum,
				'indexName': indexName
			});
			/*$('#txtDebug').val(
				$('#txtDebug').val() + 
				'\nindexNum: ' + indexNum +
				'\nindexName: ' + indexName +
				'\n--------------------'
			);*/
		}
</script>

	
