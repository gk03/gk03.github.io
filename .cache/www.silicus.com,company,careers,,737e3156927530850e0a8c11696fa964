<!-- Touch Devices Code -->
<script type="text/javascript">
    // close Modal
    $("#close").click(function (e) {
    e.preventDefault();
    window.parent.$('body').css('overflow', 'auto');
    window.parent.$("iframe").attr('src');
    window.parent.$(".modalDialog").removeClass('show');
    });
</script> 
<script type="text/javascript">
function is_touch_device() {
	var isIE10 = false;
	var usa = navigator.userAgent;

    /*@cc_on
        if (/^10/.test(@_jscript_version)) {
            isIE10 = true;
        }
    @*/

	if(isIE10 && usa.search('Touch') < 0){
		return false;
	}

	return !!('ontouchstart' in window) || !!('onmsgesturechange' in window);
}
if(is_touch_device()){
	$('.tile').each(function(index, element) {
		var link_to = $(this).find('.black-hover a').attr('href');
		$(this).find('.black-hover').remove();
		$(this).wrap('<a href="'+link_to+'" />');
	});
}
</script> 
<!-- ParDot Tracking Code-->
<script type="text/javascript">
piAId = '42672';
piCId = '3186';

(function() {
	function async_load(){
		var s = document.createElement('script'); s.type = 'text/javascript';
		s.src = ('https:' == document.location.protocol ? 'https://pi' : 'http://cdn') + '.pardot.com/pd.js';
		var c = document.getElementsByTagName('script')[0]; c.parentNode.insertBefore(s, c);
	}
	if(window.attachEvent) { window.attachEvent('onload', async_load); }
	else { window.addEventListener('load', async_load, false); }
})();
</script>
