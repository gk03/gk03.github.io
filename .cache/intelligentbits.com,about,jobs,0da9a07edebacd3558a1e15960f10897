<!-- Equal Height Columns HomePage -->
<script>
$(window).load(function(){
  var min_height = 0;
  $.each($('.match-height'), function(){
    if($(this).outerHeight() > min_height){
      min_height = $(this).outerHeight();
    }
    $('.match-height').css('min-height', min_height + 'px');
  });
});
</script>

<!-- Equal Height Columns HomePage -->
<script>
$(window).load(function(){
  $.each($('.product .text'),function(){
  
    var productWrapHeight = $(this).height();
    // console.log(productWrapHeight);
  
    var productChildrenHeight = 0;
    $(this).children().each(function(){
      productChildrenHeight = productChildrenHeight + $(this).outerHeight(true);
      // console.log('Child Height: '+$(this).outerHeight(true));
      // console.log('Children Height: '+productChildrenHeight);
    });

    // console.log(productWrapHeight - productChildrenHeight);
    $(this).find(':first-child').css('padding-top', (productWrapHeight - productChildrenHeight) / 2 + 'px');
});

});
</script></body>
