	    <script type="text/javascript">
	        $(document).ready(function () {

	            //homepage nav action 
	            $("#home-drop-trigger").on("click", function (e) {
	                e.preventDefault();
	                // var scrollElement = $(this).attr('href');
	                $('html, body').animate({
	                    scrollTop: ($(this).offset().top + 52)
	                }, 500);
	                var navHeight = $(".fluid-nav-global-blk").offset().top + 102;
	                $("#drop").css('top', navHeight);
	                $("#drop").slideDown();
	            });

	            $("#search-trigger a").on("click", function (event) {
	                event.preventDefault();
	                var naHeight = $(".fluid-nav-global-blk").offset().top + 51;
	                $("#drop-search").css('top', naHeight);
	                // $("#drop-search").slideDown();		  
	            });

	        });
