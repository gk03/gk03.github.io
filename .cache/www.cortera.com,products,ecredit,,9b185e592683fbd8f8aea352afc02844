	var j = jQuery.noConflict();
	j(document).ready(function() {

		j('#clear').click(function() {
			j('#searchcompany').val("Company Name");
			j('#searchCity').val("City");
			j('#searchState').val("");
		});

		j('#searchState').val('');
		
		j('#searchState').keyup(function(e) {
	          if(e.keyCode == 13) {
	        	  if (validate()) {
		        	  j('#businesssearch').submit();
	        	  }
		      }
		    });
	});

	function validate()
    {
	    var ret = true;
	    
    	var company = j('#searchcompany').val();
    	if(company.length == 0 || company == 'Company Name')
	    	ret = false;		    		

       	if(!ret)
    		alert('Please make sure you enter a company name when searching.');

		return ret;
    }
</script>
		
