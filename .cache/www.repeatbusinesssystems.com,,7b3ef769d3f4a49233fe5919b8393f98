	  tabHandle: '.handle',                              //class of the element that will be your tab
	  pathToTabImage: './img/tab-contactus.gif',          //path to the image for the tab (optionaly can be set using css)
	  imageHeight: '24px',                               //height of tab image
	  imageWidth: '197px',                               //width of tab image    
	  tabLocation: 'top',                               //side of screen where tab lives, top, right, bottom, or left
	  speed: 300,                                        //speed of animation
	  action: 'click',                                   //options: 'click' or 'hover', action to trigger animation
	  topPos: '0px',                                   //position from the top
	  leftPos: 'auto',
	  fixedPosition: false                               //options: true makes it stick(fixed position) on scroll
   });
});
