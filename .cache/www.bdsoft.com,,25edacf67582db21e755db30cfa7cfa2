<script src="http://www.bdsoft.com/js/ga.js"></script>
<script>
$(document).ready(function(){ 
    var heights = [];
    $('.infobox').each(function (){        
        heights.push($(this).height());
    }); 
    tallest = Math.max.apply(null, heights);
    //alert(heights);
    //alert(tallest);
    //alert ($(document).width());
    if ( $(document).width() > 746 ) {
        $('.infobox').each(function (){
            $(this).css("height",tallest + 36);
        });
        
        $('.colorbox').hover(
            function () {
                var boxColor = $(this).data("boxcolor");
                $(".infobox-default").hide();
                $(".infobox-"+boxColor).show();
            },
            function () {
                var boxColor = $(this).data("boxcolor");
                $(".infobox-default").show();
                $(".infobox-"+boxColor).hide();
            }
        );
    } 
});
</script>
