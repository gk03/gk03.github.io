   function search_clear() {            
      if (document.cssSearch.query.value == "")
          document.cssSearch.query.value = "Search";
      else    
          document.cssSearch.query.value = "";
   }
   function search_submit() {            
      if ((document.cssSearch.query.value != "") && (document.cssSearch.query.value == "Search"))
          document.cssSearch.query.value = "";
                                        
      document.cssSearch.submit();      
   }
