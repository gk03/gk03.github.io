jQuery(document).bind('gform_post_render', function(event,form_id){
	if($('#gform_'+form_id+' .gform_body .gform_fields li').hasClass('gfield gfield_error')){
		if(form_id==1)
			event_label='Consultation form';
		else if(form_id==2)
			event_label='Contact Us form';
		else 
			event_label='gform_'+form_id;
		ga('send', 'event', {
					  'eventCategory': 'FormFailure',
					  'eventAction': 'Submit',
					  'eventLabel': event_label
					});
	}
		
	// code to trigger on AJAX form render

});

