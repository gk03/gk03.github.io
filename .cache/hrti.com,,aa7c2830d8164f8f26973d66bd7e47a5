  $('.accordion').each(function () {
        var $accordian = $(this);
		$accordian.find('.highlight .accordion-head').on('click', function () {
			if($(window).width() <=980){
				var header_text=$(this).children('h1').text();
				if (!$(this).next().is(':visible')) {
					ga('send', 'event', {
					  'eventCategory': 'AccordionClick',
					  'eventAction': 'Open',
					  'eventLabel': header_text
					});
					$(this).removeClass('close11').addClass('open');
					$(this).next().slideDown();
				}
				else {
					ga('send', 'event', {
					  'eventCategory': 'AccordionClick',
					  'eventAction': 'Close',
					  'eventLabel': header_text
					});
					$(this).removeClass('open').addClass('close11');
					$(this).next().slideUp();
				}
			}	
        });
    });
	
