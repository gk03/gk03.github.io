    <script>
        function createFunctionWithTimeout(callback, opt_timeout) {
            var called = false;

            var invokeCallback = function () {
                if (!called) {
                    called = true;
                    callback();
                }
            };

            setTimeout(invokeCallback, opt_timeout || 1000);
            return invokeCallback;
        }
    </script>


