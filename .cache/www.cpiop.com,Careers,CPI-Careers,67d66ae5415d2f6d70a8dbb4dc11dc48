    <script>
        // "official" ready function. All the ready functions below this should be moved to here
        $(document).ready(function () {
            $('#whole-header').scrollToFixed({
                zIndex: 1001
            });

            $('#headBorder').scrollToFixed({
                marginTop: 101
            });

            $('#scrollableleft').scrollToFixed({
                marginTop: function () {
                    var marginTop = $(window).height() - $('#foot').outerHeight(true) - $('#scrollableleft').outerHeight(true) + 6;
                    if (marginTop >= ($('#whole-header').outerHeight() + 12)) return ($('#whole-header').outerHeight() + 12);
                    return marginTop;
                },
                zIndex: 999
            });

            // Display-Hide Header border
            function showDiv() {
                var scrollllls = $(window).scrollTop();
                if (scrollllls > 100) {
                    $('#headBorder').fadeIn('linear');
                } else {
                    $('#headBorder').fadeOut('linear');
                };
            }
            $(window).scroll(showDiv);

            $('#header_bottom_tab_list > li a.header-bottom-tooltip').each(function () {
                // tooltip for the header
                var tip1 = $(this);
                tip1.tooltipster({
                    content: tip1.find('.header-cat-name').html(),
                    trigger: 'hover',
                    position: 'bottom',
                    positionTracker: true,
                    theme: 'tooltipster-cpi',
                    delay: 100,
                    contentAsHTML: true
                });
            });

            $('.cpi-tooltip-base').each(function () {
                // tooltip for the whole site
                var tip2 = $(this);
                tip2.tooltipster({
                    content: tip2.attr('tooltip'),
                    trigger: 'hover',
                    position: 'bottom',
                    positionTracker: true,
                    theme: 'tooltipster-default',
                    maxWidth: 215,
                    delay: 100
                });
            });



            // Left Nav - BLUE_HEADER becomes unclickable
            $("#left-nav a.BLUE_HEADER").removeAttr("href");

            // impliment jQuery SelectBox
            var sb = new SelectBox({
                selectbox: $("#switchDifferentPurchasingGroup"),
                width: 311,
                height: 155,
                scrollOptions: {
                    mouseWheelSpeed: 30
                },
                changeCallback: function (val) {
                    if (val !== "") {
                        $.ajax({
                            type: 'POST',
                            url: '/SetGroup',
                            data: {
                                groupId: val
                            },
                            success: function () {
                                location.reload();
                            },
                            error: function (xhr, status, err) {
                                $.jGrowl(err + " Please try again or contact CPI for further service.", { position: "center", header: "Error" });
                            }
                        });
                    }
                }
            });
            $("#contab-selectbox").each(function () {
                var $contabSelect = $(this);

                var sb = new SelectBox({
                    selectbox: $contabSelect,
                    width: 275,
                    height: 100,
                    scrollOptions: {
                        mouseWheelSpeed: 30
                    },
                    changeCallback: function (val) {
                        if (val !== "") {
                            $contabSelect.val(val);
                        }
                    }
                });
            });

            // use class="j-scroll-pane" to impliment jScrollPane for custom scrollbar
            $('.j-scroll-pane').jScrollPane(
            {
                mouseWheelSpeed: 30
            });
            $('.j-scroll-pane-arrows').jScrollPane(
            {
                showArrows: true,
                horizontalGutter: 10,
                mouseWheelSpeed: 30
            });

            // animates the slide open and closed
            $('#chat-tab-whole-piece').tabSlideOut({
                tabHandle: '#chat-tab-trigger',
                pathToTabImage: null,
                imageHeight: null,
                imageWidth: null,
                handlePos: 0,
                tabLocation: 'right',
                speed: 300,
                action: 'click',
                topPos: '112px',
                fixedPosition: true
            });
            $('#contact-tab-whole-piece').tabSlideOut({
                tabHandle: '#contact-us-tab-trigger',
                pathToTabImage: null,
                imageHeight: null,
                imageWidth: null,
                handlePos: 140,
                tabLocation: 'right',
                speed: 300,
                action: 'click',
                topPos: '112px',
                fixedPosition: true
            });



            $("#chattab-bottom-trigger").off("click").on("click", function () {
                var $contab = $('#contact-us-tab-trigger');
                $contab.click();
                var $chattab = $("#chat-tab-trigger");
                $chattab.click();
                return false;
            });

            $(document).ready(function () {
                var left = 1000;
                $('#contab-chars-remaining-count').text(left);
                $('textarea#contab-message').keyup(function () {
                    left = 1000 - $(this).val().length;
                    if (left < 0) {
                        $('#contab-chars-remaining-count').addClass("overlimit");
                    }
                    if (left >= 0) {
                        $('#contab-chars-remaining-count').removeClass("overlimit");
                    }
                    $('#contab-chars-remaining-count').text(left);
                });
            });


            

        });
