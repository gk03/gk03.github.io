<script>
	$(document).on('click', '#headersearch', function() {
		var searchText = $('input[name="search-field"]').serialize();
		searchText = searchText.replace('search-field', 'q');
		//var searchText = ESAPI.encoder().encodeForJavaScript( $('input[name="search-field"]').val());
		var url = "\x2Fcontent\x2Fveritas\x2Fenglish\x2Fen\x2Fsearch.html?" + searchText;
		//console.log(url);
		location.href = url;
	});

	$(document).on('keypress', 'nav#menu #search-field', function(e) {
		if (e.which === 13) {
			e.preventDefault();
			$("#headersearch").click();
		}
	});

</script>


