							            <li id="drop-trigger-0" class="drop-trigger-active">	<a href="/about-us"  class="no-padding"  title="About Us">
		About Us</a>
</li>
                                        <script type="text/javascript">
                                            $(document).ready(function () {
                                                // Navigation Drop-Down Trigger
                                                $("#drop-trigger-0").on("mouseenter", function () {
                                                    $(".drop").hide();
                                                    var navHeight = $(".fluid-nav-global").offset().top + 51;
                                                    $("#drop-0").css('top', navHeight);
                                                    $("#drop-0").slideDown();
                                                });
                                                $(".nav-top-wrapper").on("mouseenter", function () {
                                                    $("#drop-0").slideUp();
                                                });
                                                $("#drop-0").mouseleave(function () {
                                                    $("#drop-0").slideUp();
                                                });
                                                $(".drop-trigger-inactive").on("mouseenter", function () {
                                                    $(".drop").hide();
                                                });
                                                // Navigation Accordians
                                                $('.igx-accordion > ul > li > ul').hide();
                                                $('#drop-0 .igx-accordion > ul > li i.fa').click(function () {

		                                            var checkElement = $(this).parent().next();
		                                            $('.igx-accordion ul li').removeClass('active').find('i').removeClass('fa-minus').addClass('fa-plus');
		                                            $(this).closest('li').addClass('active').find('i').removeClass('fa-plus').addClass('fa-minus');

		                                            if ((checkElement.is('ul')) && (checkElement.is(':visible'))) {
		                                                $(this).closest('li').removeClass('active').find('i').removeClass('fa-minus').addClass('fa-plus');
		                                                checkElement.slideUp('normal');
		                                            }

		                                            if ((checkElement.is('ul')) && (!checkElement.is(':visible'))) {
		                                                $('.igx-accordion ul ul:visible').slideUp('normal');
		                                                checkElement.slideDown('normal');
		                                            }

		                                            if (checkElement.is('ul')) {
		                                                return false;
		                                            } else {
		                                                return true;
		                                            }
                                                });
                                            });
                                        </script>    
