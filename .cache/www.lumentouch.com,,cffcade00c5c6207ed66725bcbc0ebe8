    <script>

    function ShowHideMenu() {
        mPosition = window.getComputedStyle(document.getElementById('lumen-menu')).top;
        pos = window.getComputedStyle(document.getElementById('lumen-menu')).position;

        if (pos == 'fixed') {
            if ( mPosition == '-500px'){
                document.getElementById('lumen-menu').style.top = '0px';
                $('body').addClass('body-no-scroll');
            }
            else {
                document.getElementById('lumen-menu').style.top = '-500px';
                $('body').removeClass('body-no-scroll');
            }
        }
    }

</script>

