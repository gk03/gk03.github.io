	<script type="text/javascript">
		$(document).ready(function() {

		  //ACCORDION BUTTON ACTION 
		  $('div.accordionButton').click(function() {
			    if ($("div.button", this).text() == "–") {
		            $("div.button", this).text("+");
		        }
		        else {
		            $("div.button", this).text("–");
		        }
		    $(this).next().slideToggle('normal');
		  });

		   //EXPAND/COLLAPSE ALL BUTTON ACTIONS
		  $('a.expandAllButton').click(function() {
		    $('div.accordionContent').slideDown('normal');
		    $('div.button').empty();
		    $('div.button').append( "–" );
		  });

		  $('a.collapseAllButton').click(function() {
		    $('div.accordionContent').slideUp('normal');
		    $('div.button').empty();
		    $('div.button').append( "+" );
		  });

		  //HIDE THE DIVS ON PAGE LOAD  
		  $("div.accordionContent").hide();

		  //SHOW FIRST DIV ON PAGE LOAD
		  $('div.first-question').slideDown('normal');

		 
		});
	</script>			</div>
