<section class="row module-video-playlist" data-script="videoPlaylist">
	<h1>Year One: Hear Our Team Members Describe Their First Year At Citadel</h1>
	<div class="videos-wrap">
		<div class="video-player">
			<!-- reveal with js -->
						<div class="video" id="video-1">
				<div class="embed">
