	<script type="text/javascript">
		
		$(function() {
			var intActiveSlide = 1;
			var intSlidesTotal = $("#iPadGallerySlider ul").children().length;
			var intSlideWidth = $("#iPadGallerySlider ul li").width();  
			var intSliderTotalWidth = intSlidesTotal * intSlideWidth;
			var bolSliderBusy = false;
			
			function getNextPosition() {
			
				if (intActiveSlide >= intSlidesTotal) {           
					intActiveSlide = 1;       
				} else {
					intActiveSlide += 1;              
				}        
			
			} 
			
			function getPreviousPosition() {
			console.log(intActiveSlide);
				if (intActiveSlide == 1) {           
					intActiveSlide = intSlidesTotal;        
				} else {
					console.log('wtf');
			   		intActiveSlide = intActiveSlide - 1;
				}        
			console.log(intActiveSlide);
			} 
			
			$("#iPadGallerySlider ul").width(intSliderTotalWidth);
			
			// $("#iPadGallerySlider ul li a").click(function(e){
			//		e.preventDefault();
			//	});
			
			$("#iPadGallerySliderLeft").click(function(e){
					e.preventDefault();
					if (!bolSliderBusy) {
						
						bolSliderBusy = true;
						getPreviousPosition();
						tmpPreviousSidePosition = -1 * ((intActiveSlide-1) * intSlideWidth);

						console.log(tmpPreviousSidePosition);

						$("#iPadGallerySlider ul").animate({
								left: tmpPreviousSidePosition
							}, 
							750, 
							function() {              							
								bolSliderBusy = false;	         
							}
						);
					}
				});
				
			$("#iPadGallerySliderRight").click(function(e){
					e.preventDefault();
					if (!bolSliderBusy) {
						
						bolSliderBusy = true;
						getNextPosition();
						tmpNextSidePosition = -1 * ((intActiveSlide-1) * intSlideWidth);

						$("#iPadGallerySlider ul").animate({
								left: tmpNextSidePosition
							}, 
							750, 
							function() {              							
								bolSliderBusy = false;	         
							}
						);
					}
				});
			
		})
	
	</script>

