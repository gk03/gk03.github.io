  $(window).load(function() {

    /*$(".slide1 .content").delay(200).animate({bottom: "0", opacity: "1"}, 1000);*/
    $(".slide1 .slide_image").animate({"right":"0", "opacity":"1"}, 0);

    $('.flexslider').flexslider({
      animation: "fade",
      directionNav:false,
      manualControls: ".flex-control-nav li",
      useCSS:false,

      before: function(slider) {
        /*$('.flex-active-slide').find('.content').animate({"margin-top": "-102px", opacity: "0"}, 1000);*/
        /*$('.flex-active-slide').find('.slide_image').animate({"right":"-30px", "opacity":"0"}, 500);*/
        TweenMax.to($('.flex-active-slide').find('.slide_image'), 0.4, {right:"-150px", opacity:"0", ease:Quad.easeInOut});
        TweenMax.to($('.flex-active-slide').find('.slide_image'), 0, {delay:0.6, right:"150px"});
    
        slider.slides.eq(slider.currentSlide).delay(600);
        slider.slides.eq(slider.animatingTo).delay(100);
      },

      after: function(slider) {
        // animate your caption ... 
        // find the item that is the current slide's .slidecaption and animate it
        /*$('.flex-active-slide').find('.content').animate({"margin-top": "0", opacity: "1"}, 1000);*/
        /*$('.flex-active-slide').find('.slide_image').animate({"right":"0", "opacity":"1"}, 500);*/
        TweenMax.to($('.flex-active-slide').find('.slide_image'), 0.4, {right:"0", opacity:"1", ease:Quad.easeInOut});

      }
    });
  });
