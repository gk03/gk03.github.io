    <script type="text/javascript">

        function AutoHeight(selector1, selector2) {
            var minHeight = 0;
            var elem$ = $(selector1).find(selector2);
            elem$.each(function () {
                var this$ = $(this);
                if (this$.height() > minHeight) {
                    minHeight = this$.height();
                }
            });
            elem$.css("min-height", minHeight);
        }

        $(document).ready(function () {
            AutoHeight('#row1', '.marTop2');
            AutoHeight('#row2', '.marTop2');
            AutoHeight('#row1', '.v2');
            AutoHeight('#row2', '.v4');


