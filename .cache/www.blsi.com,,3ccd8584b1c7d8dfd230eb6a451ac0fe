    <script type="text/javascript">
function getSecondPart(str) { 
    return str.split('#')[1]; 
} 

function load() {
	var urllocation = location.href;
	var anchorLink = getSecondPart(urllocation)
	var anchorWithSymbol = "#" + anchorLink
	if(urllocation.indexOf(anchorWithSymbol) > -1){
		window.location.hash=anchorLink; 
	} else {
	return false;
	}
}
</script>
<!-- end anchorscripts -->

